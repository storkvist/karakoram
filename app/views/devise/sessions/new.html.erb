<%= simple_form_for resource, as: resource_name,
                              url: session_path(resource_name) do |f| %>
  <%= f.input :email, required: false, autofocus: true %>
  <%= f.input :password, required: false %>
  <%= f.input :remember_me, as: :boolean, wrapper: :checkbox, label: '&nbsp;Запомнить меня'.html_safe %>

  <div class="field is-grouped">
    <div class="control">
      <%= f.button :submit, 'Войти' %>
    </div>
    <div class="control">
      <%= link_to 'Забыли свой пароль?', new_password_path(resource_name), class: 'button is-link' %>
    </div>
  </div>
<% end %>
