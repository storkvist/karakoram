<nav class="navbar is-light" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
    <a class="navbar-item" href="/">
      <%= image_tag 'logo.png' %>
    </a>

    <button class="button navbar-burger">
      <span></span>
      <span></span>
      <span></span>
    </button>
  </div>

  <div class="navbar-menu">
    <div class="navbar-start">
      <div class="navbar-item has-dropdown is-hoverable">
        <div class="navbar-link">
          Задачи
        </div>

        <div class="navbar-dropdown is-boxed">
          <% if can?(:index, Issue) %>
            <%= link_to issues_path(status: [:accepted, :reviewed]),
                        class: "navbar-item" do %>
              <span class="icon">
                <i class="fa fa-list"></i>
              </span>
              Новые и принятые
            <% end %>

            <%= link_to issues_path(status: :in_work),
                        class: "navbar-item" do %>
              <span class="icon">
                <i class="fa fa-th-list"></i>
              </span>
              В работе
            <% end %>

            <hr class="navbar-divider">
          <% end %>

          <%= link_to find_issues_path, class: "navbar-item" do %>
            <span class="icon">
              <i class="fa fa-search"></i>
            </span>
            Что с моим запросом?
          <% end %>
        </div>
      </div>
    </div>

    <div class="navbar-end">
      <% if user_signed_in? %>
        <%= link_to destroy_user_session_path, method: :delete, class: 'navbar-item' do %>
          <span class="icon">
            <i class="fa fa-sign-out"></i>
          </span>
          Выйти
        <% end %>
      <% else %>
        <%= link_to new_user_session_path, class: 'navbar-item' do %>
          <span class="icon">
            <i class="fa fa-sign-in"></i>
          </span>
          Войти
        <% end %>
      <% end %>
    </div>
  </div>
</nav>
